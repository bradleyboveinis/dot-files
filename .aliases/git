#!/bin/zsh

alias g='git'

# logs
alias gl='git log --oneline --decorate --all --graph'
alias gll='gl --numstat'

# status in short format
alias gs='git status -s'

# add add changes from all tracked and untracked files
alias ga='git add --all .'

# merge without fast forwarding
alias gm='git merge --no-ff'

# branches
alias gb='git branch'
alias gbl='git branch --all'

# commiting
alias gcm='git commit -m'

# ammending
alias gcamm='git commit -v -a --amend'

# pusing
alias gps='git push'

# pulling
alias gpl ='git pull'

# checking out
alias gco='git checkout'
alias gcob='git checkout -b'
